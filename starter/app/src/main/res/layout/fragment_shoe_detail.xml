<?xml version="1.0" encoding="utf-8"?>
<layout>
    
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shoe_listing.ShoeDetailFragment">

    <TextView
        android:id="@+id/shoe_model_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/shoe_model_name"
        style ="@style/title_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <EditText
        android:id="@+id/editTextShoeModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/shoe_model"
        app:layout_constraintBottom_toBottomOf="@+id/shoe_model_name"
        app:layout_constraintStart_toEndOf="@+id/shoe_model_name"
        app:layout_constraintTop_toTopOf="@+id/shoe_model_name" />

    <TextView
        android:id="@+id/shoeTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/shoe_type"
        style ="@style/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoe_model_name" />

    <Spinner
        android:id="@+id/shoeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/shoeTypeText"
        app:layout_constraintStart_toEndOf="@+id/shoeTypeText"
        app:layout_constraintTop_toTopOf="@+id/shoeTypeText" />

    <Button
        android:id="@+id/addShoeButton_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/add_shoe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoeSpinner"
        style ="@style/button_style"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>